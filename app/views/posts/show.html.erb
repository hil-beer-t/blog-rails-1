<div class="shadow p-5 bg-light rounded">
  <div class="text-center mb-5">
    <h1>
    <%= @post.title %>
  </h1>

  <p class="text-muted">
    <strong>Por <%= @post.author %></strong><br>
    <%= l @post.created_at, format: :long%>
  </p>
  </div>

  <div class="px-5">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </div>

</div>

<div class="m-5 pb-5">
  <div class="text-center">
    <h4>
      <%= pluralize(@post.comments.count, 'ComentÃ¡rio') %>
      <br>
      <% if @post.comments.count.zero? %>
        <span class="badge bg-success">Seja o primeiro a comentar!</span>
      <% end %>
    </h4>
  </div>

  <div class="shadow-sm m-3 p-3 bg-light rounded">
    <%= form_with model: @comment, local: true do |form| %>
    <%= form.hidden_field :post_id, value: @post.id %>
    <div class="form-groud mb-2">
      <%= form.label :author %>
      <%= form.text_field :author, class: 'form-control' %>
    </div>

    <div class="form-groud mb-3">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 2 %>
    </div>
    
    <%= form.submit 'Enviar', class: 'btn btn-primary mb-5', data: { disable_with: 'Enviando...'  } %>
  <% end%>
  </div>

  <% @comments.each do |comment| %>
    <div class="shadow-sm m-3 p-3 bg-light rounded">
      <div class="row">
        <div class="col text-left">
          <strong><%= comment.author %></strong>
        </div>
        <div class="col text-right">
          <em data-toggle="tooltip" data-placement="right" title="<%= l comment.created_at, format: :long %>">
            <%= time_ago_in_words comment.created_at %>
          </em>
        </div>
      </div>

      <hr>

      <%= sanitize(comment.body.gsub("\n", "<br>").html_safe) %>

    </div>
  <% end %> 
</div>


